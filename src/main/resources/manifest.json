{
  "manifest_version": 3,
  "name": "Crossword Scraper",
  "description": "Download .puz, .jpz, or .pdf files from crossword applets for offline solving.",
  "version": "1.2.12",
  "icons": {
    "128": "128.png"
  },
  "action": {
    "default_icon": "48.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "cookies",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "optional_host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts/*.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}
